{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}

<div class="pure-g center">
    <div class="pure-u-1">
        <div class="tasks">
            <h3>All Tasks:</h3>
        </div>
    </div>
</div>

{% if tasks is empty%}

<div class="pure-g">
    <div class="pure-u-1-1">
        <p>No tasks have been set yet.</p>
    </div>
</div>

{% else %}

<div class="pure-g">
    <div class="pure-u-1">
        <table class="pure-table">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Task</td>
                    <td>Completed</td>
                    <td>Notes</td>
                </tr>
            </thead>

            {% for task in tasks %}
            <tr>
                <td>{{task.id}}</td>
                <td>{{task.task}}</td>
                <td>{{task.completed}}</td>
                <td>{{task.notes}}</td>
                <td><a class="pure-button" href="{{ url('show-task',{'id' : task.id})}}">Show</a></td>
                <td><a class="pure-button" href="{{ url('update-task',{'id' : task.id})}}">Update</a></td>
                <td><a class="pure-button" href="{{ url('destroy-task',{'id' : task.id})}}">Destroy</a></td>
            </tr>
            {% endfor %}
        </table>

    </div>
</div>
{% endif %}



{% endblock %}
