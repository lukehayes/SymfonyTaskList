{% extends 'base.html.twig' %}

{% block title %}New Task{% endblock %}

{% block body %}

<div class="section">
    <div class="container">
        <div class="task">
            <h2 class="title is-5">Create a new Task!</h2>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">

        {{form_start(form)}}
            {{form_errors(form)}}

            <div class="field">
                <div class="control">
                    <label class="label">
                        {{form_label(form.task)}}
                    </label>
                    {{form_widget(form.task, { 'attr': {'class': 'input'} })}}
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <label class="label">
                        {{form_label(form.notes, 'Notes')}}
                        <span class="tag is-link is-light">optional</span>
                    </label>
                    {{form_widget(form.notes, { 'attr': {'class': 'input'} })}}
                </div>
            </div>

            <div class="field">
                <div class="control">
                    {{form_widget(form.save, {'label': 'Save', 'attr': {'class' : 'button'} })}}
                </div>
            </div>


        {{form_end(form)}}
    </div>
</div>
{% endblock %}
